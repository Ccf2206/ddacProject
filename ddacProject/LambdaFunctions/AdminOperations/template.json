    "GetLeaseTemplatesFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": "PM-GetLeaseTemplates",
        "Handler": "AdminOperations::AdminOperations.Functions.LeaseTemplateFunctions::GetLeaseTemplates",
        "CodeUri": "./bin/Release/net8.0/publish/",
        "Role": { "Fn::GetAtt": ["LambdaExecutionRole", "Arn"] },
        "Events": {
          "ApiEvent": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "AdminOperationsApi" },
