              "RestApiId": { "Ref": "AdminOperationsApi" },
              "Path": "/admin/lease-templates/{id}",
              "Method": "DELETE"
            }
          }
        }
      }
    },

    "GetLeaseTemplateDownloadUrlFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": "PM-GetLeaseTemplateDownloadUrl",
        "Handler": "AdminOperations::AdminOperations.Functions.LeaseTemplateFunctions::GetDownloadUrl",
        "CodeUri": "./bin/Release/net8.0/publish/",
        "Role": { "Fn::GetAtt": ["LambdaExecutionRole", "Arn"] },
        "Events": {
          "ApiEvent": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "AdminOperationsApi" },
              "Path": "/admin/lease-templates/{id}/download",
              "Method": "GET"
            }
          }
        }
      }
    },

    "UploadAdminDocumentFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": "PM-UploadAdminDocument",
        "Handler": "AdminOperations::AdminOperations.Functions.AdminDocumentFunctions::UploadDocument",
        "CodeUri": "./bin/Release/net8.0/publish/",
        "Role": { "Fn::GetAtt": ["LambdaExecutionRole", "Arn"] },
        "Timeout": 60,
        "MemorySize": 1024,
        "Events": {
          "ApiEvent": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "AdminOperationsApi" },
              "Path": "/admin/documents",
              "Method": "POST"
            }
          }
        }
      }
    },

    "GetAdminDocumentsFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": "PM-GetAdminDocuments",
        "Handler": "AdminOperations::AdminOperations.Functions.AdminDocumentFunctions::GetDocuments",
        "CodeUri": "./bin/Release/net8.0/publish/",
        "Role": { "Fn::GetAtt": ["LambdaExecutionRole", "Arn"] },
        "Events": {
          "ApiEvent": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "AdminOperationsApi" },
              "Path": "/admin/documents",
              "Method": "GET"
            }
          }
        }
      }
    }
  },

  "Outputs": {
    "ApiUrl": {
      "Description": "API Gateway endpoint URL",
      "Value": {
        "Fn::Sub": "https://${AdminOperationsApi}.execute-api.${AWS::Region}.amazonaws.com/prod/"
      }
    },
    "S3BucketName": {
      "Description": "S3 bucket for document storage",
      "Value": { "Ref": "DocumentsBucket" }
    },
    "S3BucketArn": {
      "Description": "S3 bucket ARN",
      "Value": { "Fn::GetAtt": ["DocumentsBucket", "Arn"] }
    }
  }
}
